{% extends 'base.html.twig' %}

{% block title %}Tienda{% endblock %}

{% block body %}
    <h1>Tienda</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ store.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ store.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button-container">
        <button type="button" class="btn btn-dark">
            <a href="{{ path('app_store_index') }}"> Regresar a la lista </a>
        </button>
        <button type="button" class="btn btn-dark">
            <a href="{{ path('app_store_edit', {'id': store.id}) }}">Editar</a>
        </button>
        <button type="button" class="btn btn-dark">
            <a href="{{ path('app_store_pdf_index', {'id': store.id}) }}">Generar reporte</a>
        </button>
    </div>
    {{ include('store/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Listado de salarios por tienda{% endblock %}

{% block body %}
    <body>
    <h1>Salarios por tienda: {{ store.name }}</h1>

     {% if salaries|length > 0 %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Fotograf√≠a</th>
                <th>Codigo de empleado</th>
                <th>Nombre</th>
                <th>Salario</th>
            </tr>
            </thead>
            <tbody>
            {% for empleado in salaries %}
                <tr>
                    <td><img src="{{ empleado.pictureUrl }}" alt="Foto" style="width: 50px; height: auto;"></td>
                    <td>{{ empleado.id }}</td>
                    <td>{{ empleado.name }}</td>
                    <td>{{ empleado.salary | format_currency('GTQ') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="not-found-data">
            <img src="{{ asset('images/store.png') }}" alt="No records found">
            <p>No hay empleados en la tienda.</p>
        </div>
    {% endif %}
    </body>
{% endblock %}

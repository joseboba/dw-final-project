{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Picture_url</th>
            <td><img src="{{ employee.pictureUrl }}" alt="" /></td>
        </tr>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>

{% extends 'base.html.twig' %}

{% block title %}Positions index{% endblock %}

{% block body %}
    <h1>Positions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>
                <td>{{ position.id }}</td>
                <td>{{ position.name }}</td>
                <td>
                    <a href="{{ path('app_positions_show', {'id': position.id}) }}">show</a>
                    <a href="{{ path('app_positions_edit', {'id': position.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_positions_new') }}">Create new</a>
    </div>
    <div>
        <a href="{{ path('app_index') }}"> Regresar </a>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}EmployeeAchievement index{% endblock %}

{% block body %}
    <h1>Actividades de {{ employee.fullName }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actividad</th>
                <th>Achievement_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee_achievement in employee_achievements %}
            <tr>
                <td>{{ employee_achievement.id }}</td>
                <td>{{ employee_achievement.description }}</td>
                <td>{{ employee_achievement.achievementType ? 'Logro' : 'Llamada de atenci√≥n' }}</td>
                <td>{{ employee_achievement.achievementDate ? employee_achievement.achievementDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {{ include('employee_achievement/_delete_form.html.twig') }}
